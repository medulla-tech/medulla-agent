[Unit]
Description=Medulla2 XMPP Agent ( Syncthing package watching )
After=samba.service slapd.service ejabberd.service
Requires=ejabberd.service

[Service]
PIDFile=/var/run/package_watching.pid
Type=forking
ExecStart=/usr/lib/python3/site-packages/medulla_agent/package_watching.py
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
