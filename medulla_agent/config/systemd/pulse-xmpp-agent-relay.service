[Unit]
Description=Medulla2 XMPP Agent ( Relay )
After=samba.service slapd.service ejabberd.service
Requires=ejabberd.service

[Service]
#PIDFile=/var/run/launcher.pid
#User=medulla
#Group=medulla
Type=forking
ExecStart=/usr/lib/python3/site-packages/medulla_agent/agentxmpp.py -d -t relayserver
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
