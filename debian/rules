	rm -fr pulse-xmpp-agent-${VERSION_XMPP_AGENT}
	tar czvf pulse-machine-plugins-${VERSION_XMPP_AGENT}.tar.gz pulse-machine-plugins-${VERSION_XMPP_AGENT}
	rm -fr pulse-machine-plugins-${VERSION_XMPP_AGENT}
