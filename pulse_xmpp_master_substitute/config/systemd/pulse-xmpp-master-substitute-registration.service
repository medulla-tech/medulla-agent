[Unit]
Description= Pulse master agent substitute for registration
After=samba.service slapd.service

[Service]
#PIDFile=/var/run/launcher.pid
#User=pulse
#Group=pulse
Type=forking
ExecStart=/usr/lib/python2.7/site-packages/pulse_xmpp_master_substitute/agentmastersubstitute.py -d -f /etc/pulse-xmpp-agent-substitute/agent_master_substitute_reg.ini
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
